class Solution {
public:
    int mySqrt(int x) {
        if(x==0) return 0;
        int left = 1;
        int right = x;
        while(right-left>1){ // ==1时会陷入死循环，因为mid会往左偏
            int mid = left + (right - left) / 2;
            if(x/mid < mid){
                right=mid;
            }
            else{
                left=mid;
            }
        }
        return left;
    }
};
