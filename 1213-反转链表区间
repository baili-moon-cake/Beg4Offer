/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */

 //反转链表的新思路，推荐

class Solution {
public:
    ListNode* reverseBetween(ListNode* head, int m, int n) {
        ListNode* dummy = new ListNode(0);
        dummy->next=head;
        ListNode* pre = dummy;
        ListNode* cur = head;
        for(int i=1; i<m; i++){
            pre=pre->next;
        }
        cur=pre->next;
        for(int i=m; i<n; i++){
            ListNode* nex=cur->next; //把这个nex移到前面去
            cur->next = nex->next;
            nex->next=pre->next;
            pre->next=nex; //pre永远保持不变
        }
        return dummy->next;
    }
};
