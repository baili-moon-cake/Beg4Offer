// The API isBadVersion is defined for you.
// bool isBadVersion(int version);

class Solution {
public:
    int firstBadVersion(int n) {
        if(n<2) return 1;
        int left = 1;
        int right = n;
        while(left < right){
            int mid = left + (right-left)/2;
            if(!isBadVersion(mid)) left=mid+1;
            if(isBadVersion(mid)) right=mid;
        }
        return left;
    }
};
